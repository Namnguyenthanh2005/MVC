@model IEnumerable<MVC_Group3.Models.Cart>

<h2>Thanh toán</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Shoe.Name</td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity * item.Shoe.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng tiền: </strong>@Model.Sum(item => item.Quantity * item.Shoe.Price).ToString("C")</p>

<form asp-action="PlaceOrder">
    <button type="submit" class="btn btn-primary">Đặt hàng</button>
</form>