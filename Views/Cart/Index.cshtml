@model IEnumerable<MVC_Group3.Models.Cart>

<h2>Giỏ hàng của bạn</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Shoe.Name</td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity * item.Shoe.Price).ToString("C")</td>
                <td>
                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Checkout" class="btn btn-success">Thanh toán</a>
